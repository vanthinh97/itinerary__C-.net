@model Training.Models.TblUsers
@{
    ViewBag.Title = "Edit";
}

<h4>Edit user: #@Model.Id - @Model.UserName</h4>
<form method="post" action="@Url.Action("Edit")">
   <input name="Id" value="@Model.Id" type="hidden"/>
    <div class="form-group">
        <label>FullName</label>
        <input name="FullName" value="@Model.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input name="Address" value="@Model.Address" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>
<i>@ViewBag.Message</i>
